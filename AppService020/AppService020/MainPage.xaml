<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppService020.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="My First Background Service!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Interval To Track Location(Seconds):"/>
        <Entry x:Name="entSecond" Text="5" Placeholder="input seconds"   />
        <Button x:Name="btnStartStop" Text="Start/Stop" Clicked="btnStartStop_Clicked" TextTransform="None" />
        <Label x:Name="lblCounterValue" />


    </StackLayout>

</ContentPage>
